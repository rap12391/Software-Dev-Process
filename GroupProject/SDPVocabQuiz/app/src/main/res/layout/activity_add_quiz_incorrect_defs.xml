<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/back_button"
        android:layout_marginEnd="117dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="Add+" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/finish_button"
        android:layout_marginStart="79dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="Back" />

    <Button
        android:id="@+id/finish_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/registerHeader_textview6"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="Finish" />

    <EditText
        android:id="@+id/incorrect_definition"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView13"
        android:layout_marginTop="124dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Incorrect Definition"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="60dp"
        android:text="Add incorrect definitions here (three incorrect defintions for every word):" />

    <TextView
        android:id="@+id/registerHeader_textview6"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:contentDescription="Register Header"
        android:text="Add Quiz"
        android:textAlignment="viewStart"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible" />

</RelativeLayout>