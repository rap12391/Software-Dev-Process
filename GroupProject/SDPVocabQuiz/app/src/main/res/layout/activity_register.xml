<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <Button
        android:id="@+id/Back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/Finish_button"
        android:layout_marginEnd="117dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:contentDescription="Register Button"
        android:text="Back"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="404dp" />

    <Button
        android:id="@+id/Finish_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/RegisterHeader_textview"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="67dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:contentDescription="Register Button"
        android:text="Finish >"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="404dp" />

    <TextView
        android:id="@+id/RegisterHeader_textview"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:contentDescription="Register Header"
        android:text="Register"
        android:textAlignment="viewStart"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:text="Register" />

    <EditText
        android:id="@+id/email_inp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Email_textview"
        android:layout_alignEnd="@+id/RegisterHeader_textview"
        android:contentDescription="Email input text"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/major_inp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/RegisterHeader_textview"
        android:layout_centerVertical="true"
        android:contentDescription="Major input text"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/username_inp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/RegisterHeader_textview"
        android:layout_alignParentTop="true"
        android:layout_marginTop="93dp"
        android:contentDescription="Username input text"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/Email_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Username_textview"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="176dp"
        android:text="Email:"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/Major_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Email_textview"
        android:layout_centerVertical="true"
        android:text="Major:"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/Seniority_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Major_textview"
        android:layout_alignParentTop="true"
        android:layout_marginTop="184dp"
        android:text="Seniority Level:"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/Username_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="104dp"
        android:text="Username:"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/seniority_spinner"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Seniority_textview"
        android:layout_alignEnd="@+id/RegisterHeader_textview"
        android:entries="@array/seniority_array"
        android:layout_marginEnd="-9dp" />

</RelativeLayout>