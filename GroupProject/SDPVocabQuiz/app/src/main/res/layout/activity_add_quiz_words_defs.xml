<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizzActivityDefs">

    <Button
        android:id="@+id/add_next_def"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/add_quiz_defs_back"
        android:layout_toEndOf="@+id/add_quiz_defs_back"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="+Add" />

    <Button
        android:id="@+id/add_quiz_defs_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/quiz_name_field"
        android:layout_marginBottom="78dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="Back" />

    <Button
        android:id="@+id/add_quiz_defs_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/add_next_def"
        android:layout_toEndOf="@+id/add_next_def"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="Next >" />

    <EditText
        android:id="@+id/word1_text"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/registerHeader_textview2"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Word"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/correct_definition1"
        android:layout_width="342dp"
        android:layout_height="48dp"
        android:layout_alignStart="@+id/registerHeader_textview2"
        android:layout_below="@+id/word1_text"
        android:ems="10"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:text="Definition"
        android:textSize="12sp"
        tools:text="Definition" />

    <TextView
        android:id="@+id/registerHeader_textview2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:contentDescription="Register Header"
        android:text="Add Quiz"
        android:textAlignment="viewStart"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:text="Add Quiz" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/word1_text"
        android:layout_alignStart="@+id/registerHeader_textview2"
        android:text="Add words and their associated definitions below:" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/registerHeader_textview2"
        android:layout_marginTop="125dp"
        android:text="Quiz Description:"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/registerHeader_textview2"
        android:layout_marginTop="78dp"
        android:text="Quiz Name:"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/quiz_description_field"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignEnd="@+id/correct_definition1"
        android:ems="10"
        android:inputType="text"
        android:text="Description"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/quiz_name_field"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignEnd="@+id/quiz_description_field"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:textStyle="italic" />
</RelativeLayout>