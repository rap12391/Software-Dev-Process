<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/homeHeader_textview"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:contentDescription="Home Header"
        android:text="Home"
        android:textAlignment="viewStart"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/seniority_textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="190dp"
        android:layout_marginStart="52dp"
        android:text="Remove Quiz:"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/seniority_spinner3"
        android:layout_width="221dp"
        android:layout_height="34dp"
        android:layout_alignEnd="@+id/homeHeader_textview"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="183dp" />

    <Button
        android:id="@+id/remove_button"
        android:layout_width="81dp"
        android:layout_height="57dp"
        android:layout_alignEnd="@+id/homeHeader_textview"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="119dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:contentDescription="removes quiz"
        android:text="Remove" />

    <Button
        android:id="@+id/pr"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:contentDescription="Register Button"
        android:text="Practice" />

    <Button
        android:id="@+id/viewStatsButton"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="219dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:contentDescription="Register Button"
        android:text="View Stats" />

    <Button
        android:id="@+id/homeAddQuiz"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="149dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:contentDescription="Login Button"
        android:text="Add Quiz" />
</RelativeLayout>
